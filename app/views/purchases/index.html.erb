<%= render "shared/second-header"%>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <h1 class='transaction-title-text'>
      購入内容の確認
    </h1>
    <%# 購入内容の表示 %>
    <div class='buy-item-info'>
      <%= image_tag @item.image, class: 'buy-item-img' %>
      <div class='buy-item-right-content'>
        <h2 class='buy-item-text'>
          <%= @item.product_name %>
        </h2>
      </div>
    </div>
    <%# /購入内容の表示 %>

    <%= form_with model: @purchase_deliver, url: item_purchases_path, id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>  
    <%# 配送先の入力 %>
    <div class='shipping-address-form'>
      <h1 class='info-input-haedline'>
        お知らせ内容入力
      </h1>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">配送割引のご利用</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:arrival_id, Arrival.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ご要望がございましたらご記入ください</label>
          <span class="indispensable">任意</span>
        </div>
        <%= f.text_field :request_comment, class:"input-default", id:"request-comment", placeholder:"例）ゴムのりも一緒に一缶"%>
      </div>
  
    </div>
    <%# /配送先の入力 %>
    <div class='buy-btn'>
      <%= f.submit "購入" ,class:"buy-red-btn" %>
    </div>
    <% end %>
  </div>
</div>
<%= render "shared/second-footer"%>